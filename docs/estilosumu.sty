% Listado de código en c
\newtcblisting{cListing}[2][]{
  listing engine=minted,
  minted language=c,
  title=#2,
  colbacktitle=gray,
  coltitle=white,          
  fonttitle=\bfseries,     
  minted options={
    fontsize=\small,
    breaklines,
  },
  listing only,
  #1
}

% Listado tipo terminal de Bash
\newtcblisting{terminalListing}[2][]{
  listing engine=minted,
  minted language=console,
  title=#2,
  colbacktitle=gray,   
  coltitle=white,         
  fonttitle=\bfseries,     
  minted options={
    style=monokai,
    fontsize=\small,
    breaklines,
  },
  colback=darkgray,
  colframe=darkgray,
  coltext=lightgray,
  listing only,
  #1
}

